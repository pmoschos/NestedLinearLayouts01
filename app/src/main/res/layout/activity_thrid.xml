<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="13"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="36sp"
        android:layout_weight="4"
        android:text="Coding Factory" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/javaBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="18dp"
            android:text="Java" />

        <Button
            android:id="@+id/csharpBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:layout_margin="18dp"
            android:layout_weight="1"
            android:text="C#" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pythonBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="18dp"
            android:text="Python" />

        <Button
            android:id="@+id/phpBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="18dp"
            android:text="Php" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/javascriptBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="18dp"
            android:text="Javascript" />

        <Button
            android:id="@+id/angularBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="18dp"
            android:text="Angular" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sqlBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="18dp"
            android:text="SQL" />

        <Button
            android:id="@+id/mongodbBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_margin="18dp"
            android:text="MONGODB" />
    </LinearLayout>

    <TextView
        android:id="@+id/androidTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Android Development" />
</LinearLayout>